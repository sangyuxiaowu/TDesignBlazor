
<div style="margin-50px;">
    <h1 style="font-size:36px;margin-bottom:10px; margin-top:20px; display:block;">@Title</h1>
    <p style="color:#666">
        @Description
    </p>
    <TTab>
        <TTabItem Title="示例">
            <TLayout style="height:75vh;overflow-y:auto">
                <RightSideContent>
                    @if ( Anchors is not null )
                    {
                        <div style="width:20vw;padding:10px;">
                            <TAnchor style="position: fixed;" Container="#page">
                                @foreach ( var item in Anchors )
                                {
                                    <TAnchorItem Title="@item" Href="@("#"+item)"></TAnchorItem>
                                }
                            </TAnchor>
                        </div>
                    }
                </RightSideContent>
                <ChildContent>
                    @Demo
                </ChildContent>
            </TLayout>
        </TTabItem>
        <TTabItem Title="API">
            <div style="height:75vh;overflow-y:auto">
                @API
            </div>
        </TTabItem>
    </TTab>
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public RenderFragment? Demo { get; set; }
    [Parameter] public RenderFragment? API { get; set; }
    [Parameter] public string[]? Anchors { get; set; }
}